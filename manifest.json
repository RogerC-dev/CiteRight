{
  "manifest_version": 3,
  "name": "台灣法源探測器 (CiteRight)",
  "version": "2.0",
  "description": "自動識別並高亮顯示台灣法律條文、釋字、判決書等法源資料，提供即時法律資訊查詢",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "tabs",
    "cookies",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "extension/pages/sidepanel.html"
  },
  "host_permissions": [
    "http://localhost/*",
    "http://localhost:3000/*",
    "http://localhost:5173/*",
    "http://127.0.0.1/*",
    "http://127.0.0.1:3000/*",
    "https://aomp.judicial.gov.tw/*",
    "https://cons.judicial.gov.tw/*",
    "https://*.judicial.gov.tw/*",
    "https://*.supabase.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ]
    },
    {
      "matches": [
        "http://localhost:5173/*",
        "https://*.supabase.co/*"
      ],
      "js": [
        "extension/scripts/auth-content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "extension/scripts/background.js"
  },
  "action": {
    "default_title": "CiteRight Extension",
    "default_popup": "extension/pages/popup.html",
    "default_icon": {
      "16": "extension/assets/icon.png",
      "32": "extension/assets/icon.png",
      "48": "extension/assets/icon.png",
      "128": "extension/assets/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "processed_data/*.json",
        "processed_data/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}