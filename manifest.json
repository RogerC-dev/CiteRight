{
  "manifest_version": 3,
  "name": "法源探測器 (Precedent)",
  "version": "1.0",
  "description": "台灣法律案號自動連結與摘要工具",
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_title": "法源探測器 (Precedent)"
  }
}